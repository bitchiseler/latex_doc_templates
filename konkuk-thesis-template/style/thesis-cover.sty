% =====================================
% Cover (표지)
% =====================================
\newcommand{\makecover}{
\thispagestyle{empty}

% 상단: 좌측 정렬 + 위로 올린 버전(필요시 12mm 조절)
\vspace*{0mm}
{\raggedright
\noindent{\fontsize{14pt}{16pt}\selectfont 석(박사)학위 청구논문\par}
\vspace{4mm}
\noindent{\fontsize{14pt}{16pt}\selectfont \kk@advisor\par}
}

% 중앙: 제목/부제
\vspace{15mm}
\begin{center}
{\fontsize{20pt}{24pt}\bfseries \kk@title\par}
\vspace{6mm}
{\fontsize{16pt}{20pt}\selectfont \kk@subtitle\par}
\end{center}

% 하단 블록
\vfill
\begin{center}
{\fontsize{16pt}{18pt}\selectfont \kk@coverdate\par}
\vspace{30mm}
{\fontsize{18pt}{20pt}\bfseries 건국대학교 대학원\par}
\vspace{10mm}
{\fontsize{16pt}{18pt}\selectfont \kk@dept\par}
\vspace{8mm}
{\fontsize{18pt}{20pt}\bfseries \kk@author\par}
\end{center}

\clearpage
}

